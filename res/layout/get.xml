<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/send_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/b_startActivity"
        android:layout_below="@id/send_field"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="StartActivity" />

    <Button
        android:id="@+id/b_startActivityForResult"
        android:layout_alignTop="@id/b_startActivity"
        android:layout_toLeftOf="@id/b_startActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="StartActivityForResult" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_below="@id/b_startActivityForResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

</RelativeLayout>
